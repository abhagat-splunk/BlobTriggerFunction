{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "appName": {
            "type": "String",
            "defaultValue": "<Function App Name>",
            "metadata": {
                "description": "The name of the function app that you wish to create."
            }
        },
        "storageAccountName": {
            "defaultValue": "<Storage Account Name>",
            "type": "String"
        },
        "githubRepoURL": {
            "defaultValue": "https://github.com/ani0989/BlobTriggerFunction.git",
            "type": "String"
        },
        "githubRepoBranch": {
            "defaultValue": "develop",
            "type": "String"
        },
        "path": {
            "defaultValue": "test/{name}",
            "type": "String"
        }
    },
    "variables": {
        "functionAppName": "[parameters('appName')]",
        "storageAccountName": "[parameters('storageAccountName')]",
        "pathName": "[parameters('path')]"
    },
    "functions": [],
    "resources": [
        {
            "type": "Microsoft.Web/sites",
            "apiVersion": "2018-11-01",
            "name": "[variables('functionAppName')]",
            "location": "[resourceGroup().location]",
            "kind": "functionapp",
            "properties": {
                "siteConfig": {
                    "appSettings": [
                        {
                            "name": "AzureWebJobsDashboard",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTAZUREFILECONNECTIONSTRING",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "AzureWebJobsStorage",
                            "value": "[concat('DefaultEndpointsProtocol=https;AccountName=', variables('storageAccountName'), ';AccountKey=',listKeys(resourceId('Microsoft.Storage/storageAccounts', variables('storageAccountName')), '2019-06-01').keys[0].value)]"
                        },
                        {
                            "name": "WEBSITE_CONTENTSHARE",
                            "value": "[toLower(variables('functionAppName'))]"
                        },
                        {
                            "name": "FUNCTIONS_EXTENSION_VERSION",
                            "value": "~1"
                        },
                        {
                            "name": "FUNCTIONS_WORKER_RUNTIME",
                            "value": "python"
                        }
                    ]
                }
            },
            "resources": [
                {
                    "type": "sourcecontrols",
                    "apiVersion": "2018-11-01",
                    "name": "web",
                    "dependsOn": [
                        "[resourceId('Microsoft.Web/sites/', variables('functionAppName'))]"
                    ],
                    "properties": {
                        "RepoUrl": "[parameters('githubRepoURL')]",
                        "branch": "[parameters('githubRepoBranch')]",
                        "IsManualIntegration": true
                    }
                }
            ]
        },
        {
            "type": "Microsoft.Web/sites/functions",
            "apiVersion": "2018-11-01",
            "name": "[concat(variables('functionAppName'), '/BlobTrigger')]",
            "dependsOn": [
                "[resourceId('Microsoft.Web/sites', variables('functionAppName'))]"
            ],
            "properties": {
                "config": {
                    "files": {
                        "__init__.py": "import logging\nimport datetime\nimport azure.functions as func\n\n\ndef main(myblob: func.InputStream):\n    timestamp = datetime.datetime.utcnow()\n    logging.info(f\"Python blob trigger function processed blob \\n\"\n                 f\"Name: {myblob.name}\\n\"\n                 f\"Blob Size: {myblob.length} bytes\\n\"\n                 f\"Blob Content: {myblob.read()}\"\n                 )\n    return \\'{}\\'.format(myblob.read())"
                    },
                    "scriptFile": "__init__.py",
                    "bindings": [
                        {
                            "type": "blobTrigger",
                            "direction": "in",
                            "name": "blobFile",
                            "path": "test/{name}",
                            "connection": "AzureWebJobsStorage"
                        }
                    ],
                    "disabled": false
                }
            }
        }
    ]
}